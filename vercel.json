{
  "functions": {
    "api/ok.js":     { "maxDuration": 5,  "memory": 128 },
    "api/admin.js":  { "maxDuration": 5,  "memory": 128 },
    "api/router.js": { "maxDuration": 10, "memory": 1024 }
  },
  "routes": [
    { "src": "^/$",                    "dest": "/api/ok.js" },
    { "src": "^/admin$",               "dest": "/api/admin.js" },
    { "src": "^/(upload|kakao)(?:/.*)?$", "dest": "/api/router.js" }
  ]
}
